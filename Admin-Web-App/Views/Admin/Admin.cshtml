@model Admin_Web_App.Models.LockRequest
<h1>Lock/Unlock User</h1>

<div class="mt-4">
    <form asp-action="LockUnlockAccount" method="post" class="mb-3">
        <div class="row align-items-center">
            <div class="col-md-4">
                <label for="customerId" class="mr-2">Customer ID</label>
                <input type="text" id="customerId" name="customerId" class="form-control" />
            </div>

            <div class="col-md-8 mt-2">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="action" id="lockAction" value="lock" checked>
                    <label class="form-check-label" for="lockAction">Lock</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="action" id="unlockAction" value="unlock">
                    <label class="form-check-label" for="unlockAction">Unlock</label>
                </div>
                <button type="submit" class="btn btn-primary ml-2">Submit</button>
            </div>
        </div>
    </form>
</div>
