@model Login

@{
    ViewData["Title"] = "Home";
}



<div>
    <h1 class="display-4">Most Common Bank of Australia</h1>
    <br />
    <br />
    <div class="row justify-content-between">
        <div class="col-md-4">
            <h2 class="display-4">Login</h2>
            <form asp-action="Login">
                <div class="form-group">
                    <label asp-for="LoginID" class="control-label"></label>
                    <input asp-for="LoginID" class="form-control" />
                    <span asp-validation-for="LoginID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password" class="control-label">Password</label>
                    <input id="Password" name="Password" type="password" class="form-control"
                           data-val="true" data-val-required="The Password field is required." />
                    @Html.ValidationMessage("Password", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
            </form>
        </div>
        <div class="col-md-4">
            <img src="~/img/bank.png" alt="bank" class="img-fluid" />
        </div>
    </div>
</div>

<br />
<br />


<div class="text-center">
    Welcome to MCBA - More than a bank, we're architects of financial innovation. Embrace a unique journey with cutting-edge technology and personalized flair. Your financial story starts here, where ordinary is obsolete. Welcome to the extraordinary world of Most Common Bank of Australia!
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
